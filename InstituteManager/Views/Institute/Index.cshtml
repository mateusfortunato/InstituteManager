@model IEnumerable<InstituteManager.Models.Institute>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Index </title>
</head>
<body>
<p>
    <a asp-action="Create"> Create new </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstituteID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th></th>
        </tr>
    </thead>
<tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.InstituteID
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Adress
                </td>
                <td>
                    <a	asp-action="Edit" asp-route-id="@item.InstituteID"> Edit </a> 
                    |
                    <a	asp-action="Details" asp-route-id="@item.InstituteID"> Details </a> 
                    |
                    <a	asp-action="Delete" asp-route-id="@item.InstituteID"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</body>
</html>