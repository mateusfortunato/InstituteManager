<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport"content="width=device-width" />
		<title>@ViewData["Title"] - Capitulo 03</title>
		<environment include="Development">
			<link rel="stylesheet"href="~/lib/bootstrap/dist/css/bootstrap.css" />
			<link rel="stylesheet"href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
		</environment>
		<environment exclude="Development">
			<link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
			<link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap-grid.min.css" asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
		</environment>    @RenderSection("Styles", required: false)
	</head>
	<body>
		<nav class="navbar navbar-light bg-primary navbar-fixed-top" >
			<div class="container-fluid" >
				<div class="row" >
					<div class="navbar-header">
						<img class="media-heading" src="~/images/something.png" width="30" height="30" alt="" >
					</div>
					<div>
						<ul class="nav navbar-nav navbar-light" >
							<li class="navbar-brand">
								&nbsp;&nbsp;&nbsp;ASP.NET Core MVC
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>

		<div class="container" style="margin-top: 20px;" >
			<div class="row" >
				<div class="col-3" >
					<nav class="nav flex-column bg-transparent" style="margin-left: 40px;" >
						<div class="row" >
							<a class="nav-link" href="#" >
								<img src="~/images/otherthing.png" width="30" height="30" alt="" >
								Departments
							</a>
						</div>
					</nav>
				</div>
				<div class="col-9">
					@RenderBody()
				</div>
			</div>
		</div>
		<nav class="navbar fixed-bottom" style="background-color: #e3f2fd; margin-top: 20px;" >
			<a class="navbar-brand" href="#" > 
				Mateus Fortunato 
			</a>
		</nav>
	</body>